<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Stock dimensions">
    <ListPreference
        android:key="pref_units"
        android:title="Unit of measure"
        android:entries="@array/units"
        android:entryValues="@array/unit_values"
        android:defaultValue="@string/pref_unit_default" />
    <EditTextPreference
        android:key="pref_wLength"
        android:id="@+id/length_patch"
        android:title="Stock length"
        android:inputType="numberDecimal"
        android:defaultValue="@string/pref_stock_length" />
    <EditTextPreference
        android:key="pref_wWidth"
        android:id="@+id/width_patch"
        android:title="Stock width"
        android:inputType="numberDecimal"
        android:defaultValue="@string/pref_stock_width" />
        <EditTextPreference
            android:key="pref_wDepth"
            android:id="@+id/depth_patch"
            android:title="Stock depth"
            android:inputType="numberDecimal"
            android:defaultValue="@string/pref_stock_depth" />
        <EditTextPreference
            android:key="pref_spoilB"
            android:id="@+id/spoil_patch"
            android:title="Spoil board depth"
            android:inputType="numberDecimal"
            android:defaultValue="@string/pref_spoil_default" />
        <EditTextPreference
            android:key="pref_sWidth"
            android:id="@+id/stroke_patch"
            android:title="Drill bit dimameter"
            android:inputType="numberDecimal"
            android:defaultValue="@string/pref_stroke_default" />
    </PreferenceCategory>
</PreferenceScreen>